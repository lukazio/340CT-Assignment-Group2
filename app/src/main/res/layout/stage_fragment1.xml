<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stage1_bg"
    tools:context=".StageFragment1">

    <TextView
        android:id="@+id/tv_stage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STAGE 1"
        android:textColor="#00BFA8"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <Button
        android:id="@+id/btn_stage1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-1"
        android:textColor="#FFFFFF"
        android:backgroundTint="#008577"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_stage1_2" />

    <Button
        android:id="@+id/btn_stage1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-2"
        android:textColor="#FFFFFF"
        android:backgroundTint="#008577"
        app:layout_constraintBottom_toTopOf="@+id/btn_stage1_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_stage1_3" />

    <Button
        android:id="@+id/btn_stage1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-3"
        android:textColor="#FFFFFF"
        android:backgroundTint="#008577"
        app:layout_constraintBottom_toTopOf="@+id/btn_stage1_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>